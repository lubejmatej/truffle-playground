{
  "name": "truffle-playground-client",
  "version": "1.0.0-alpha.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "homepage": "https://lubejmatej.github.io/truffle-playground/",
  "scripts": {
    "build": "npm run copy:dev:env && snowpack build --baseUrl=/",
    "build:gh:pages": "npm run copy:prod:env && snowpack build --baseUrl=/truffle-playground/",
    "clean": "rm dist/bundle.js",
    "copy:dev:env": "npm run copy:plugin -- './index.dev.html' './src/index.html'",
    "copy:plugin": "node node_scripts/copy-plugin.js",
    "copy:prod:env": "npm run copy:plugin -- './index.prod.html' './src/index.html'",
    "start": "npm run copy:dev:env && snowpack dev",
    "start:ci": "npm run start & npx wait-on http://localhost:8080",
    "test": "jest",
    "test:e2e": "CYPRESS_baseUrl=http://localhost:8888 cypress run",
    "test:e2e:open": "cypress open --browser=chrome --config '{\"baseUrl\": \"http://localhost:8080\", \"watchForFileChanges\": true}'",
    "test:e2e:serve": "npx http-server build -c-1 -p 8888"
  },
  "dependencies": {
    "bn.js": "4.11.6",
    "buffer": "^5.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "web3": "^1.7.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@snowpack/plugin-postcss": "^1.4.3",
    "@testing-library/react": "^12.1.4",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.41",
    "@types/react-dom": "^17.0.14",
    "@types/react-test-renderer": "^17.0.1",
    "autoprefixer": "^10.4.4",
    "cypress": "^9.5.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.0",
    "react-test-renderer": "^17.0.2",
    "snowpack": "^3.8.8",
    "ts-jest": "^27.1.4"
  }
}
