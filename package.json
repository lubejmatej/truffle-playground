{
  "name": "truffle-playground",
  "version": "1.0.0-alpha.0",
  "description": "",
  "author": "Matej Lubej",
  "license": "MIT",
  "homepage": "https://lubejmatej.github.io/truffle-playground/",
  "scripts": {
    "format:staged": "pretty-quick --staged --pattern \"**/*.*(ts|tsx|css)\"",
    "install:truffle:global": "npm i truffle@5.5.6 -g",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./client/src",
    "prepare": "husky install",
    "prettier": "prettier --write \"./client/src/**/*.{ts,tsx,css}\"",
    "prettier:check": "prettier --list-different \"./client/src/**/*.{ts,tsx,css}\"",
    "test": "truffle test"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^7.0.0",
    "prettier": "^2.6.0",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.6.2"
  }
}
